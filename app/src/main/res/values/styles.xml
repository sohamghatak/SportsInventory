<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a Item in the editor -->
    <style name="ItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Style for Buttons in the editor -->
    <style name="OrderButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_order</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Buttons in the editor -->
    <style name="DeleteButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_delete</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Linear Layout in list item -->
    <style name="ImageLinearLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Style for Linear Layout in list item -->
    <style name="TextLinearLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Style for Static Text in list item -->
    <style name="StaticTextViewStyle">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for Product Image in list item -->
    <style name="ProductImageStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <!-- Style for Static Text in list item -->
    <style name="ProductStaticTextStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#37474F</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for Product text description in list item -->
    <style name="ProductDescriptionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for product price in list item -->
    <style name="ProductPriceText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for product quantity in list item -->
    <style name="ProductQuantityText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">#E65100</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for sale button in list item -->
    <style name="SaleButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <!-- Style for product name text in list item -->
    <style name="TitleTextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#01579B</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Style for  Text in list item -->
    <style name="TextViewStyle">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Increase quantity button style in Editor Activity-->
    <style name="IncreaseButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!--Decrease quantity button style in Editor Activity-->
    <style name="DecreaseButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Editor Image view style -->
    <style name="EditorImageViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#01579B</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
